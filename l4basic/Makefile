
.PHONY: all clean install uninstall
all: 
	$(MAKE) -C l4darr all
	$(MAKE) -C l4bds all
	$(MAKE) -C l4arg all
clean:
	$(MAKE) -C l4darr clean
	$(MAKE) -C l4bds clean
	$(MAKE) -C l4arg clean
install:
	$(MAKE) -C l4darr install
	$(MAKE) -C l4bds install
	$(MAKE) -C l4arg install
uninstall:
	$(MAKE) -C l4darr uninstall
	$(MAKE) -C l4bds uninstall
	$(MAKE) -C l4arg uninstall
